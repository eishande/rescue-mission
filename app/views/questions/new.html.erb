<%= form_for @question do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :description %>:
  <%= f.text_field :description %>
    
  <%= f.hidden_field :user %>

  <%= f.submit %>
<% end %>

<%- if @question.errors.present? -%>
  <div>
    <ul>
      <%- @question.errors.full_messages.each do |error| -%>
        <li><%= error %></li>
      <%- end -%>
    </ul>
  </div>
<%- end -%>
